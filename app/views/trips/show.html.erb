<h1>Trip <%= @trip.id %></h1>

<article>
  <ul>
    <li>Driver: <%= link_to @driver.name, driver_path(@driver.id) %></li>
    <li>Passenger: <%= link_to @passenger.name, passenger_path(@passenger.id) %></li>
    <li>Date: <%= @trip.date %></li>
    <li>Rating: <%= @trip.rating %></li>
    <li>Cost: $<%= "%.2f" % (@trip.cost / 100) %></li>
  </ul>

  <div class="dropbtn-edit">
    <%= link_to "Edit", edit_trip_path(@trip), class: "link-list-edit" %>
    <%= link_to "Delete", trip_path(@trip), class: "link-list-delete", method: :delete, confirm: "Are you sure?" %>
  </div


