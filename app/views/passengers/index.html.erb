<h1>Rideshare Passengers</h1>
<div>
<ul>

<% @passengers.each do |passenger|%>
    <li><%=link_to "#{passenger.name}", passenger_path(passenger.id), method: :get %>
    <%=link_to "Edit", edit_passenger_path(passenger.id), method: :get %>
    <%=link_to "Delete",passenger_path(passenger), method: :delete, confirm: "Are you sure?" %></li>
<% end %>
</ul>
</div>